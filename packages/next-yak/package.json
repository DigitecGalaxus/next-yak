{
  "name": "next-yak",
  "version": "0.0.9",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./withYak": {
      "require": "./withYak/index.cjs"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build && npm run test",
    "build": "pnpm run --parallel --filter . \"/^build:/\"",
    "build:runtime": "tsup runtime/index.ts --target es2022 --external react --dts --format cjs,esm --minify --clean --sourcemap --out-dir dist",
    "build:withYak": "tsup withYak/index.ts --target es2022 --dts --format cjs --sourcemap --out-dir withYak --external ../loaders/tsloader.cjs --external ../loaders/cssloader.cjs",
    "test": "vitest run && tsc -p tsconfig.json",
    "test:watch": "vitest --watch -u"
  },
  "dependencies": {
    "@babel/core": "7.23.0",
    "@babel/plugin-syntax-typescript": "7.22.5",
    "postcss-nested": "^6.0.1"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.14",
    "@babel/types": "7.23.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "29.5.5",
    "@types/node": "20.4.5",
    "@types/react": "18.2.16",
    "@types/react-dom": "18.2.7",
    "jsdom": "^22.1.0",
    "react": "^18.2.0",
    "typescript": "5.1.6",
    "vite": "^4.4.9",
    "vitest": "0.34.5",
    "tsup": "7.2.0"
  },
  "files": [
    "dist",
    "loaders",
    "runtime",
    "withYak"
  ]
}
